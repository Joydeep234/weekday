                $(document).on('change', '.member-checkbox', function () {
                    const memberId = $(this).val();
                    const memberName = $(this).data('name');
                    const selectedIds = [];

                    if ($(this).is(':checked')) {
                        $('#selectedMembersList').append(`
                               <div class="selected-member" id="selected-${memberId}">
