@page
@model weekday.Pages.TeamMember.TaskCompletionModel
@{
}


<div class="container">
    <div class="row">
        <div class="col" style="font-size:20px;background-color:azure">
            <h4>@Model.PrjName</h4> @* 29/11/2024 *@

            <form method="post" class="form-control">
                <div class="form-control">
                    <label>Task ID: </label>
                    <input asp-for="TaskMdIP.TaskIdM" readonly/>
                    <span asp-validation-for="TaskMdIP.TaskIdM"></span>
                </div>
                <div>
                    <label>Title: </label>
                    <input asp-for="TaskMdIP.TitleM" readonly/>
                    <span asp-validation-for="TaskMdIP.TitleM"></span>
                </div>
                <div>
                    <label>Assigned By: </label>
                    <input asp-for="TaskMdIP.AssignedByIdM" readonly/>
                    <span asp-validation-for="TaskMdIP.AssignedByIdM"></span>
                </div>
                <div>
                    <label>Assigned Date: </label>
                    <input asp-for="TaskMdIP.AssignedDateM" readonly/>
                    <span asp-validation-for="TaskMdIP.AssignedDateM"></span>
                </div>
                <div>
                    <label>Dead Line: </label>
                    <input asp-for="TaskMdIP.DeadlineM" readonly/>
                    <span asp-validation-for="TaskMdIP.DeadlineM"></span>
                </div>
                <div>
                    <label>Summary: </label>
                    <input asp-for="TaskMdIP.SummaryM" readonly/>
                    <span asp-validation-for="TaskMdIP.SummaryM"></span>
                </div>
                <div>
                    <label>Task Details: </label>
                    <input asp-for="TaskMdIP.DetailsM"/>
                    <span asp-validation-for="TaskMdIP.DeadlineM"></span>
                </div>
                <div>
                    <label>Current Status: @Model.TaskMdIP.StatusM</label>
                    @* <input asp-for="TaskMdIP.StatusM" readonly/> *@
                    
                </div>
                <div>
                    <label>Last Updated time: </label>
                    <input asp-for="TaskMdIP.LatestUpdateTimeM" readonly/>
                    
                </div>
                <div>
                    <label>Status</label>
                    <select asp-for="TaskMdIP.StatusM">   
                        <option value="TODO">TODO</option>
                        <option value="INPROGRESS">INPROGRESS</option>
                        <option value="DONE">DONE</option>
                    </select>
                    <span asp-validation-for="TaskMdIP.StatusM"></span>
                    
                </div>
                <div>
                    <button type="submit" class="btn btn-outline-info">Update</button>
                    <a asp-page="/TeamMember/Dashboard" class="btn btn-outline-danger" asp-route-empId="@Model.TaskMdIP.AssignedForIdM">Cancel</a>

                </div>

            </form>
        </div>
    </div>
</div>
