<div class="row bg-white ms-3 mt-4" style="height: 600px;">
    @{
            <!-- Left Column -->
            <div class="col-7 h-full">
                <h2>@Model.ProjectDis.ProjectName</h2>
                <p>Project ID: @Model.ProjectDis.ProjectId</p>

                <!-- Select Team -->
                <label class="form-label">Select Team</label>
                <div class="dropdown">
                    <button id="teamDropdownButton" class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                        -- Select a Team --
                    </button>
                    <div class="dropdown-menu" id="teamDropdown">
                        @foreach (var team in Model.teamList)
                        {
                            <div class="dropdown-item">
                                <input type="radio" name="selectedTeam" class="team-radio" value="@team.TeamId"
                                       data-name="@team.TeamName" />
                                @team.TeamName
                            </div>
                        }
                    </div>
                </div>

                <!-- Selected Team Display -->
                <div class="mt-3" id="selectedTeamContainer">
                    <h5>Selected Team:</h5>
                    <div id="selectedTeamName"></div>
                </div>

                <!-- Select Team Leads -->
                <label class="form-label mt-4">Select Team Leads</label>
                <div class="dropdown">
                    <button id="teamLeadDropdownButton" class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                        -- Select Team Leads --
                    </button>
                    <div class="dropdown-menu" id="teamLeadDropdown">
                        @foreach (var employee in Model.Employees)
                        {
                            <div class="dropdown-item">
                                <input type="checkbox" class="team-lead-checkbox"
                                       value="@employee.EmployeeId"
                                       data-name="@($"{employee.FirstName} {employee.LastName}")" />
                                @($"{employee.FirstName} {employee.LastName}")
                            </div>
                        }
                    </div>
                </div>

                <!-- Selected Team Leads Display -->
                <div class="mt-3" id="selectedTeamLeadsContainer">
                    <h5>Selected Team Leads:</h5>
                    <div id="selectedTeamLeads"></div>
                </div>

                <!-- Submit Button -->
                <button id="saveSelections" class="btn btn-primary mt-4">Save Selections</button>
            </div>
            
            <input type="hidden" id="selectedTeamId" name="SelectedTeamId" />
            <input type="hidden" id="selectedTeamLeadIds" name="SelectedTeamLeadIds" />

        

    }

    <!-- Right Column: Content with Scrolling -->
    <div class="col h-full" style="overflow-y: auto;">
        @{
            if (Model.ProjectDis != null)
            {
                <div class="h-full" id="CreateTeamFeild">
                    <div class="projectDetailheader d-flex border border-solid py-4 ps-4 mt-10">
                        <p class="ms-3">Details</p>
                        @if(Model.ProjectDis.ProjectStatus == "New"){
                            <p class="badge badge-lg badge-dot ms-10">
                                <i class="bg-warning"></i>@Model.ProjectDis.ProjectStatus
                            </p>
                        }else if(Model.ProjectDis.ProjectStatus =="OnGoing"){
                            <p class="badge badge-lg badge-dot ms-10">
                                <i class="bg-success"></i>@Model.ProjectDis.ProjectStatus
                            </p>
                        }else if(Model.ProjectDis.ProjectStatus =="Completed"){
                            <p class="badge badge-lg badge-dot ms-10">
                                <i class="bg-Primary"></i>@Model.ProjectDis.ProjectStatus
                            </p>
                        }
                    </div>
                    <div class="projectDetailmain border border-solid py-4 ps-4 h-2/3">
                        <div class="d-flex">
                            <div class="">
                                <div class="d-flex px-3 my-4">
                                    <p class="me-16">Assignee :</p>
                                    <p class="me-2 text-start">@Model.ProjectDis.ProjectName</p>
                                </div>
                                <div class="d-flex px-3 my-4">
                                    <p class="me-10">Designation :</p>
                                    <p class="me-2 text-start">@Model.ProjectDis.About</p>
                                </div>
                                <div class="d-flex my-4 px-3 ">
                                    <p class="me-8">Created Date :</p>
                                    <p class="me-2 text-start text-primary">@Model.ProjectDis.StartDate</p>
                                </div>
                                <div class="d-flex my-4 px-3 ">
                                    <p class="me-2">Project Deadline :</p>
                                    <p class="me-2 text-start text-primary">@Model.ProjectDis.Deadline</p>
                                </div>
                                <div class="d-flex my-4 px-3 ">
                                    <p class="me-8">Starting Date :</p>
                                    <p class="me-2 text-start text-primary">@Model.ProjectDis.StartDate</p>
                                </div>
                                <div class="d-flex my-4 px-3 ">
                                    <p class="me-16">End Date :</p>
                                    <p class="me-2 text-start text-primary">@Model.ProjectDis.EndDate</p>
                                </div>
                                <div class="d-flex my-4 px-3">
                                    <p class="me-20">About :</p>
                                    <p class="me-2 text-start">@Model.ProjectDis.About</p>
                                </div>
                                <div class="d-flex my-4 px-3">
                                    <p class="me-20">Details:</p>
                                    <p class="me-2 text-start">@Model.ProjectDis.Details</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>






@section Scripts {
    <script>
        $(document).ready(function () {
            // Track selected team and team leads
            let selectedTeamId = null;
            let selectedTeamLeads = [];

            // Handle team selection
            $(document).on('change', '.team-radio', function () {
                selectedTeamId = $(this).val(); // Get the selected team ID
                const teamName = $(this).data('name');

                // Display selected team name
                $('#selectedTeamName').text(teamName);

                // Store the selected team ID in the hidden input
                $('#selectedTeamId').val(selectedTeamId);

                // Clear previously selected team leads
                $('#selectedTeamLeads').empty();
                selectedTeamLeads = [];
                $('#selectedTeamLeadIds').val('');

                // Fetch team leads for the selected team using AJAX
                $.ajax({
                    url: `/ProjectManager/ProjectDiscription?handler=GetTeamLeads`,
                    type: 'GET',
                    data: { teamId: selectedTeamId },
                    success: function (response) {
                        const teamLeads = response.teamLeads;
                        const teamLeadDropdown = $('#teamLeadDropdown');
                        teamLeadDropdown.empty(); // Clear previous team leads

                        teamLeads.forEach(lead => {
                            teamLeadDropdown.append(`
                                    <div class="dropdown-item">
                                        <input type="checkbox" class="team-lead-checkbox" value="${lead.employeeId}"
                                               data-name="${lead.firstName} ${lead.lastName}" />
                                        ${lead.firstName} ${lead.lastName}
                                    </div>
                                `);
                        });
                    },
                    error: function (error) {
                        alert('Error loading team leads!');
                        console.error(error);
                    }
                });
            });

            // Handle team lead selection
            $(document).on('change', '.team-lead-checkbox', function () {
                const leadId = $(this).val();
                const leadName = $(this).data('name');

                if ($(this).is(':checked')) {
                    selectedTeamLeads.push(leadId);
                    $('#selectedTeamLeads').append(`<div id="lead-${leadId}">${leadName}</div>`);
                } else {
                    selectedTeamLeads = selectedTeamLeads.filter(id => id !== leadId);
                    $(`#lead-${leadId}`).remove();
                }

                // Store the selected team lead IDs in the hidden input
                $('#selectedTeamLeadIds').val(selectedTeamLeads.join(','));
            });

            // Handle save selections
            $('#saveSelections').click(function () {
                if (!selectedTeamId) {
                    alert('Please select a team!');
                    return;
                }

                const formData = {
                    SelectedTeamId: selectedTeamId,
                    SelectedTeamLeadIds: selectedTeamLeads.map(Number)
                };

                console.log('Saving:', formData);

                $.ajax({
                    url: '/ProjectManager/ProjectDiscription?handler=SaveSelections',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(formData),
                    headers: {
                        'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                    },
                    success: function (response) {
                        alert('Selections saved successfully!');
                    },
                    error: function (error) {
                        alert('Error saving selections!');
                        console.error(error);
                    }
                });
            });
        });
    </script>


}