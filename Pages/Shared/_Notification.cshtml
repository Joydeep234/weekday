@* @{
    var toastMessage = TempData["ToastMessage"] as string;
    var toastType = TempData["ToastType"] as string ?? "success"; // Default to "success"
}

@if (!string.IsNullOrEmpty(toastMessage))
{

    <script type="text/javascript">
        toastr.options = {
            "closeButton": true,
            "positionClass": "toast-top-right",
            "timeOut": "3000"
            };
            $(document).ready(function () {
                toastr["@toastType"]("@toastMessage");
                console.log("Taost message displayed");
            });
    </script>
}
